{{ header }}
<div id="product-manufacturer" class="container-fluid">
  <div class="row">{{ column_left }}
    <div id="content" class="col"  style="padding-left:20px;padding-top:10px;padding-right:20px">{{ content_top }}
      {% if manufacturers %}
      <div class="row">
           {% for manufacturer in manufacturers %}
                <div style="width:fit-content" class="px-2">
                   <a href="{{ manufacturer.href }}"> <img src="{{ manufacturer.image }}" alt="{{ manufacturer.name }}"></a><br><a style="font-size: 11px !important;
line-height: 30px;
color: #fff !important;
background-color: #0f1740 !important;
height: 30px;
width:100px;
display: block;
    text-align: center;
margin-bottom: 20px;" href="{{ manufacturer.href }}">{{ manufacturer.name }}</a>
                </div>
      {% endfor %}
                   </div>
